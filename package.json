{
  "name": "comic-viewer-tag",
  "version": "1.0.0",
  "description": "Display pictures in comic-like-style",
  "private": true,
  "scripts": {
    "start": "npm run build; npm run watch & npm run server",
    "build": "rollup -c && cp dist/comic-viewer.js demo/ && cp node_modules/riot/riot.js demo/riot.js",
    "deploy": "gh-pages -d dist",
    "watch": "chokidar 'src/**' -c 'npm run build'",
    "server": "browser-sync start --files 'demo/*' --server demo/",
    "test": "npm run standard && npm run test-unit",
    "standard": "standard src/*.js test/*.js test/*/*.js",
    "test-unit": "mocha --compilers js:babel-register test/unit/*.js",
    "test-cloud": "wdio test/wdio.conf.cloud.js",
    "test-local": "wdio test/wdio.conf.local.js"
  },
  "peerDependencies": {
    "riot": "^3.3.1"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "gh-pages": "^0.12.0",
    "mocha": "^3.3.0",
    "riot": "^3.4.3",
    "rollup": "^0.41.6",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-riot": "^1.1.0",
    "standard": "^10.0.2",
    "uglify-js": "^2.8.22",
    "wdio-mocha-framework": "^0.5.10",
    "wdio-phantomjs-service": "^0.2.2",
    "wdio-spec-reporter": "0.1.0",
    "wdio-testingbot-service": "^0.1.7",
    "webdriverio": "^4.7.1"
  },
  "license": "MIT",
  "dependencies": {
    "es6-event-emitter": "^1.9.0"
  }
}
